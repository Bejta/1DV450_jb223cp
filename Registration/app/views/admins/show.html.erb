<div><%= link_to 'Logout', logout_path %></div>

<% @user.each do | u | %>

    <% if u.username != 'admin'%>
    <h3><%= u.username %></h3>
    <%= link_to 'Delete User',  { action: :destroy, id: u.id },
                                  method: :destroy, 
                                    data: { confirm: 'If you press YES you will delete the user!' } %>
    <table>
         <tr>
            <td>API Key</td>
            <td>URL</td>
            <td>Description</td>
            <td>State</td>
            <td>Command</td>
         </tr>
        <% u.clients.each do | c | %>
        <tr>
            <td colspan="4"><%= c.name %></td>
        </tr>
        <tr>
            <td>
                <p><%= c.apikey %></p>
            </td>
            <td>
                <p><%= c.url %></p>
            </td>
            <td>
                <p><%= c.description %></p>
            </td>
            <td>
                <% if c.active %>
                <p>ACTIVE</p>
                <% else %>
                <p>INACTIVE</p>
                <% end %>
            </td>
            <td>
                <p><%= link_to 'Activate/Deactivate',
                      { action: :revoke, id: c.id },
                        method: :revoke,
                          data: { confirm: 'Press YES to change application state' } %></p>
            </td>
        </tr>
        <% end %>
    </table>
    <% end %>
<% end %>